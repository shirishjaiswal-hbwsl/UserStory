        </tab>
        <!-- to create section -->
        <section id="colorpickersection" translate="label" type="text" sortOrder="320" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>General</label>
            <!-- Assign section to tab -->
            <tab>mod16</tab>
            <resource>Mod16_General::configuration</resource>
          <group id="colorpicker_configuration" translate="label" type="text" sortOrder="5" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Configuration</label>
                <!-- create text type field -->
                <field id="enable_color_picker" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Shirish\US16\Model\Config\Source\ColorPickerYesNo</source_model>
                </field>
                <field id="pick_color" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Color Picker</label>
                    <source_model>Shirish\US16\Model\Config\Source\ColorPicker</source_model>
                </field>
            </group>
        </section>

        
