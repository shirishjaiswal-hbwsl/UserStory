<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="employee_table">
        <column xsi:type="int" name="employee_id" nullable="false" identity="true"
            comment="Employee Id" />
        <column xsi:type="varchar" name="first_name" length="255" nullable="false"
            comment="First Name" />
        <column xsi:type="varchar" name="last_name" length="255" nullable="false"
            comment="Last Name" />
        <column xsi:type="varchar" name="email_id" length="255" nullable="false"
            comment="Email Id" />
        <column xsi:type="varchar" name="address" length="255" nullable="false"
            comment="Address" />
        <column xsi:type="varchar" name="phone" length="255" nullable="false"
            comment="Phone" />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="employee_id" />
        </constraint>
    </table>
</schema>